
<div class="container-gys">
  <div class="project-title">
  <h1 class="text-secondary my-3">All <span class="banner-highlight-primary">projects</span></h1>
  </div>

<%# change artist_name to modify the whole card %>
<% user = User.find_by(artist_name: "Peggy Gou") %>
<% project = Project.find_by(user_id: user) %>
<div class="artist-banner text-white border border-white shadow-sm p-3 mb-5 bg-body rounded" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path user.photo.key, crop: :fit %>'); height:300px; width:949px">
        <div class="card-img-overlay d-flex flex-column justify-content-between">
          <div>
          <h1 class="card-title"> <%= project.name %> </h1>
          <h5 class="card-text"> <%=  user.artist_name %> </h5>
          </div>
          <div class="align-items d-flex justify-content-between" >
            <div><%= link_to "Discover", project_path(project.id), class: 'btn btn-outline-light'%></div>
            <div>
              <div>
                <p class="card-text"><i class="fas fa-donate"></i>
                <%= project.number_of_tokens - project.number_of_transactions(project) %> Tokens left </p>
              </div>
              <div>
                <p class="card-text"><i class="fas fa-user-friends"></i>
                <%= project.number_of_buyers(project) %> Buyers </p>
              </div>
            </div>
          </div>
        </div>
    </div>
<div class="row row-cols-auto">

  <% @projects.each do |project| %>
  <div class="col-4">
    <div class="card  text-white border border-white shadow-sm p-3 mb-5 bg-body rounded" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path User.find(project.user_id).photo.key, crop: :fit, height: 320 %>'); height:280px; width:340px">
        <div class="card-img-overlay d-flex flex-column justify-content-between">
          <div>
            <h5 class="card-title"> <%= project.name %></h5>
            <p class="card-text"> <%= project.user.artist_name  %> </p>
          </div>
          <div class="align-items d-flex justify-content-between">
            <%= link_to "Discover", project_path(project) ,  class: 'btn btn-outline-light'%>
            <p class="card-text"><i class="fas fa-donate"></i> <%= project.number_of_tokens - project.number_of_transactions(project)%> Left</p>
            <p class="card-text"><i class="fas fa-user-friends"></i> <%= project.number_of_buyers(project)%> Buyers</p>
          </div>
        </div>
    </div>
  </div>
  <% end %>
</div>

  <i class="fas fa-backward text-primary sticky-bottom"></i> <%= link_to "Back to home page", root_path, class: "text-decoration-none" %>
</div>
