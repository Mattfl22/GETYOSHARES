<div class="container">


  <div class="artist-banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://media.vogue.fr/photos/60a51de3de22532a74a2c4cc/master/pass/V0-2-POMME.jpg);">
    <div class="artist-banner-name">
      <h3><%= User.find(@project.user_id).artist_name.capitalize %></h3>
      <p><%= @project.name  %></p>
    </div>
    <div class="artist-banner-genre">
      <p><%= "Genre" %></p>
    </div>
    <div class="artist-banner-token">
      <h2><%= @project.number_of_tokens %></h2>
      <p>tokens left</p>
    </div>
  </div>

  <div class="artist-project-info">
    <div class="row">
      <div class="col col-sm-6">
        <h2 class="text-primary">Project description</h2>
        <p class="opacity-75"><%= @project.description %></p>
        <h2 class="text-primary">Music player</h2>
        <p>Placeholder</p>
      </div>
      <div class="col col-sm-1">
      </div>
      <div class="col col-sm-5">
        <h2 class="text-primary mb-3">Financial information</h2>
        <p class="text-primary m-0"><i class="fas fa-coins text-secondary"></i>  Project funding status</p>
        <p class="text-primary fs-3 m-0">xx,xxx $</p>
        <% token = Token.find_by(project_id: @project.id) %>
        <p>invested on <%= number_with_delimiter(((@project.number_of_tokens) * (token.unit_price)), :delimiter => ',')%> $ goal</p>
        <div class="artist-project-info-financial">
          <div class="artist-project-info-financial-card">
            <p><%= token.unit_price%> $</p>

          </div>

        </div>
      </div>
    </div>
  </div>



  <h3>Release date: <%= @project.release_date.strftime("%B %d, %Y") %></h3>
  <h3>Distributor:</h3>
  <p><%= @project.distributor %></p>

  <%= link_to "Return to projects", projects_path %>
  <h3>Available Tokens</h3> <%= @project.number_of_tokens %>
  <p>To be implemented</p>
</div>
