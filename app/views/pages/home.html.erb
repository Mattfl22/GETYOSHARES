<div class="container-gys mt-4">
  <div class="home-banner row">
    <div class="home-banner-left col-lg-4 col-sm-12">
      <div class="home-banner-title">
        <h1>
          <span class="home-banner-title-span"><span class="home-banner-title-animation">Discover.</span></span>
          <span class="home-banner-title-span"><span class="home-banner-title-animation">Invest.</span></span>
          <span class="home-banner-title-span"><span class="home-banner-title-animation">Get <span class="banner-highlight-primary">Rich.</span><span></span>
        </h1>
      </div>
      <form action="/projects" method="GET" class="home-banner-form">
        <input type="text" placeholder="Find your future star" name="search">
        <input type="submit" value="Go !" class="home-banner-btn-submit">
      </form>
    </div>

    <div class="home-banner-right col-8">
    <%# change artist_name to modify the whole card %>
      <% user = User.find_by(artist_name: "Cardi B") %>
      <div class="home-banner-image cardi-b">
        <div class="home-banner-image-name opacity"><%= user.artist_name %></div>
        <div class="home-banner-image-hover">
          <span><%= user.artist_name %></span>
          <div class="home-banner-image-hover-token">
            <% project = Project.find_by(user_id: user) %>
            <span><%= project.number_of_tokens - project.number_of_transactions(project) %></span>
            <span>Tokens left</span>
          </div>
        </div>
      </div>

      <div class="home-banner-image booba">
        <% user = User.find_by(artist_name: "Booba") %>
        <div class="home-banner-image-name opacity"><%= user.artist_name %></div>
        <div class="home-banner-image-hover">
          <span><%= user.artist_name %></span>
          <div class="home-banner-image-hover-token">
            <% project = Project.find_by(user_id: user) %>
            <span><%= project.number_of_tokens - project.number_of_transactions(project) %></span>
            <span>Tokens left</span>
          </div>
        </div>
      </div>

      <div class="home-banner-image peggy-gou">
        <% user = User.find_by(artist_name: "Peggy Gou") %>
        <div class="home-banner-image-name opacity"><%= user.artist_name %></div>
        <div class="home-banner-image-hover">
          <span><%= user.artist_name %></span>
          <div class="home-banner-image-hover-token">
            <% project = Project.find_by(user_id: user) %>
            <span><%= project.number_of_tokens - project.number_of_transactions(project) %></span>
            <span>Tokens left</span>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>


